<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text=""
        android:gravity="center_vertical|end"
        android:textSize="50sp"
        android:id="@+id/result"
        android:scrollbars="vertical"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="30sp"
        android:id="@+id/input"
        android:maxLines="1"
        android:gravity="center_vertical|end"
         />




    <GridLayout
        android:id="@+id/tablelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:columnCount="4"
        android:rowCount="5">


        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#EDEDED"
            android:text="c"
            android:textColor="#A3A3A3"
            android:textSize="40sp" />


        <Button
            android:id="@+id/buttoncheng"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#EDEDED"
            android:text="×"
            android:textColor="#A3A3A3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonchu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#EDEDED"
            android:text="÷"
            android:textColor="#A3A3A3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonzf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#EDEDED"
            android:textColor="#A3A3A3"
            android:text="←"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttonjian"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#EDEDED"
            android:text="-"
            android:textColor="#A3A3A3"
            android:textSize="40sp" />


        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="6"
            android:textSize="40sp" />


        <Button
            android:id="@+id/buttonjia"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#EDEDED"
            android:text="+"
            android:textColor="#A3A3A3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttondeng"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:background="#B9D3EE"
            android:text="="
            android:textSize="40sp" />

        <Button
            android:id="@+id/buttondian"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="."
            android:textSize="40sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="0"
            android:textSize="40sp" />


        <Button
            android:id="@+id/buttonbai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="#FFFAFA"
            android:text="%"
            android:textSize="40sp" />

    </GridLayout>
</LinearLayout>